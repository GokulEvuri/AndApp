<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
     >
    
    <TextView 
        android:id="@+id/res_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="Name"
        android:textColor="#111111"
        />
    
    <TextView 
        android:id="@+id/res_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="1km"
        android:layout_toRightOf="@+id/res_store_name"
        android:textColor="#111111"
        />
    
    <TextView 
        android:id="@+id/res_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="Store"
        android:layout_toRightOf="@+id/res_name"
         android:textColor="#111111"
        />
    
    <TextView 
        android:id="@+id/res_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="0 SEK"
        android:layout_below="@+id/res_name"
         android:textColor="#111111"
        />
    
    <TextView 
        android:id="@+id/res_timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="00:00-00:00"
        android:layout_toRightOf="@+id/res_price"
        android:layout_below="@+id/res_name"
         android:textColor="#111111"
        />
    
    <TextView 
        android:id="@+id/res_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="0000000000"
        android:layout_toRightOf="@+id/res_timings"
        android:layout_below="@+id/res_name"
         android:textColor="#111111"
        />
    
    <Button 
        android:id="@+id/walk"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/walk"/>
    
    <Button 
        android:id="@+id/car"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/walk"
        android:background="@drawable/car"
        android:layout_marginLeft="20dp"
        />
    
    <Button 
        android:id="@+id/more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/car"
         android:layout_marginLeft="20dp"
        android:background="@drawable/more_options"/>
    
</RelativeLayout>
